        }
        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }
        @@media (max-width: 768px) {
            .col-md-3 {
                margin-bottom: 2rem;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Global chart instances
        let opportunityChart = null;
        let applicationStatusChart = null;

        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Load initial data
            loadDashboardData();
            
            // Time range filter
            $('.dropdown-item[data-range]').on('click', function(e) {
                e.preventDefault();
                const range = $(this).data('range');
                $('.dropdown-item[data-range]').removeClass('active');
                $(this).addClass('active');
                $('#timeRangeDropdown').text($(this).text().trim());
                loadDashboardData(range);
            });
            
            // Chart type filter
            $('.dropdown-item[data-type]').on('click', function(e) {
                e.preventDefault();
                const type = $(this).data('type');
                $('.dropdown-item[data-type]').removeClass('active');
                $(this).addClass('active');
                $('#chartTypeDropdown').text($(this).text().trim());
                loadDashboardData($('.dropdown-item[data-range].active').data('range') || 30);
            });
        });

        // Format date for display
        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(dateString).toLocaleDateString(undefined, options);
        }

        // Get appropriate badge class for status
        function getStatusBadgeClass(status) {
            const statusMap = {
                'Pending': 'warning',
                'Approved': 'success',
                'Rejected': 'danger',
                'InReview': 'info',
                'Withdrawn': 'secondary'
            };
            return statusMap[status] || 'secondary';
        }
        
        // Load dashboard data from API
        function loadDashboardData(range = 30) {
            // Show loading state for stats cards
            $('.stat-icon').html('<i class="bx bx-loader bx-spin"></i>');
            
            // Show loading state for tables
            $('#recentUsersTable').html(`
                <tr>
                    <td colspan="3" class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Loading data...</span>
                    </td>
                </tr>`);
                
            $('#recentApplicationsTable').html(`
                <tr>
                    <td colspan="4" class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Loading data...</span>
                    </td>
                </tr>`);
            
            // Show loading for charts
            $('.card-body canvas').parent().html('<div class="d-flex justify-content-center align-items-center" style="height: 250px;"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');
            
            // Fetch data from the API
            $.ajax({
                url: '/api/admin/dashboard',
                method: 'GET',
                data: { timeRange: range },
                success: function(data) {
                    // Update stats cards
                    updateStatsCards(data);
                    
                    // Update recent users table
                    updateRecentUsersTable(data.recentUsers);
                    
                    // Update recent applications table
                    updateRecentApplicationsTable(data.recentApplications);
                    
                    // Initialize charts
                    if (data.opportunityStats) {
                        initOpportunityChart(data.opportunityStats);
                    }
                    
                    if (data.applicationStatus) {
                        initApplicationStatusChart(data.applicationStatus);
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Failed to load dashboard data:', error);
                    
                    // Show error message in tables
                    const errorHtml = `
                        <tr>
                            <td colspan="3" class="text-center text-danger py-4">
                                <i class="bx bx-error-alt fs-4"></i>
                                <p class="mb-0">Failed to load data. Please try again later.</p>
                            </td>
                        </tr>`;
                        
                    $('#recentUsersTable').html(errorHtml);
                    $('#recentApplicationsTable').html(errorHtml.replace('colspan="3"', 'colspan="4"'));
                    
                    // Show error in charts
                    $('.card-body canvas').parent().html(`
                        <div class="text-center text-danger py-4">
                            <i class="bx bx-error-alt fs-4"></i>
                            <p class="mb-0">Failed to load chart data</p>
                        </div>`);
                }
            });
        }
        
        // Update stats cards with data
        function updateStatsCards(data) {
            $('#totalUsers').text(data.totalUsers.toLocaleString());
            $('#totalOpportunities').text(data.totalOpportunities.toLocaleString());
            $('#totalApplications').text(data.totalApplications.toLocaleString());
            $('#totalPosts').text(data.totalPosts.toLocaleString());
            
            // Restore icons
            $('.stat-icon').each(function(index) {
                const icons = [
                    'bx-user',
                    'bx-briefcase-alt-2',
                    'bx-file',
                    'bx-news',
                    'bx-trophy',
                    'bx-file'
                ];
                $(this).html(`<i class="bx ${icons[index]} fs-1"></i>`);
            });
        }
        
        // Update recent users table
        function updateRecentUsersTable(users) {
            if (!users || users.length === 0) {
                $('#recentUsersTable').html(`
                    <tr>
                        <td colspan="3" class="text-center py-4 text-muted">
                            No recent users found
                        </td>
                    </tr>`);
                return;
            }
            
            const rows = users.map(user => `
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="${user.profileImageUrl || '/images/default-avatar.png'}" 
                                 class="rounded-circle me-2" width="30" height="30" 
                                 alt="${user.username}" 
                                 onerror="this.onerror=null; this.src='/images/default-avatar.png'">
                            <span>${user.username || 'N/A'}</span>
                        </div>
                    </td>
                    <td>${user.email || 'N/A'}</td>
                    <td>${formatDate(user.createdAt)}</td>
                </tr>
            `).join('');
            
            $('#recentUsersTable').html(rows);
        }
        
        // Update recent applications table
        function updateRecentApplicationsTable(applications) {
            if (!applications || applications.length === 0) {
                $('#recentApplicationsTable').html(`
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">
                            No recent applications found
                        </td>
                    </tr>`);
                return;
            }
            
            const rows = applications.map(app => `
                <tr>
                    <td>
                        <div class="text-truncate" style="max-width: 150px;" 
                             data-bs-toggle="tooltip" data-bs-placement="top" 
                             title="${app.opportunityTitle || 'N/A'}">
                            ${app.opportunityTitle || 'N/A'}
                        </div>
                    </td>
                    <td>${app.userName || 'N/A'}</td>
                    <td>
                        <span class="badge bg-${getStatusBadgeClass(app.status)}">
                            ${app.status || 'N/A'}
                        </span>
                    </td>
                    <td>${formatDate(app.appliedAt)}</td>
                </tr>
            `).join('');
            
            $('#recentApplicationsTable').html(rows);
            
            // Re-initialize tooltips for the new elements
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        }
        
        // Initialize Opportunity Chart
        function initOpportunityChart(stats) {
            const ctx = document.getElementById('opportunityChart').getContext('2d');
            
            if (opportunityChart) {
                opportunityChart.destroy();
            }
            
            opportunityChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: stats.labels,
                    datasets: [{
                        label: 'Opportunities',
                        data: stats.data,
                        borderColor: 'rgba(78, 115, 223, 1)',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        }
        
        // Initialize Application Status Chart
        function initApplicationStatusChart(statusData) {
            const ctx = document.getElementById('applicationStatusChart').getContext('2d');
            
            if (applicationStatusChart) {
                applicationStatusChart.destroy();
            }
            
            // Prepare data for the chart
            const labels = statusData.map(item => item.status);
            const data = statusData.map(item => item.count);
            const backgroundColors = [
                'rgba(78, 115, 223, 0.8)',
                'rgba(28, 200, 138, 0.8)',
                'rgba(246, 194, 62, 0.8)',
                'rgba(231, 74, 59, 0.8)',
                'rgba(120, 111, 166, 0.8)'
            ];
            
            applicationStatusChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    },
                    cutout: '70%'
                }
            });
        }
    </script>
}