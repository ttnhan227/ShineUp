@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Dashboard Overview</h1>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="timeRangeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Last 30 days
            </button>
            <ul class="dropdown-menu" aria-labelledby="timeRangeDropdown">
                <li><a class="dropdown-item" href="#" data-range="7">Last 7 days</a></li>
                <li><a class="dropdown-item active" href="#" data-range="30">Last 30 days</a></li>
                <li><a class="dropdown-item" href="#" data-range="90">Last 90 days</a></li>
                <li><a class="dropdown-item" href="#" data-range="365">This year</a></li>
            </ul>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Total Users</h6>
                            <h2 class="mb-0" id="totalUsers">0</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="bx bx-user fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-primary bg-opacity-25 border-0">
                    <a class="small text-white text-decoration-none" asp-controller="UserManagement" asp-action="Index">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Opportunities</h6>
                            <h2 class="mb-0" id="totalOpportunities">0</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="bx bx-briefcase-alt-2 fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-success bg-opacity-25 border-0">
                    <a class="small text-white text-decoration-none" asp-controller="OpportunityManagement" asp-action="Index">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Applications</h6>
                            <h2 class="mb-0" id="totalApplications">0</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="bx bx-file fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-warning bg-opacity-25 border-0">
                    <a class="small text-white text-decoration-none" asp-controller="OpportunityManagement" asp-action="Applications">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Total Posts</h6>
                            <h2 class="mb-0" id="totalPosts">0</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="bx bx-news fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-danger bg-opacity-25 border-0">
                    <a class="small text-white text-decoration-none" asp-controller="PostManagement" asp-action="Index">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats Cards (Active Contests, Total Submissions) -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Active Contests</h6>
                            <h2 class="card-title mb-0">0</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="bx bx-trophy"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted">Coming soon</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Total Submissions</h6>
                            <h2 class="card-title mb-0">0</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="bx bx-file"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted">Coming soon</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Opportunities Overview -->
        <div class="col-xl-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Opportunities Overview</h6>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="chartTypeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Monthly
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="chartTypeDropdown">
                            <li><a class="dropdown-item" href="#" data-type="monthly">Monthly</a></li>
                            <li><a class="dropdown-item" href="#" data-type="weekly">Weekly</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="opportunityChart" height="300"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Application Status -->
        <div class="col-xl-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">Application Status</h6>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="chart-container" style="position: relative; height:250px; width:250px">
                        <canvas id="applicationStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row g-4 mb-4">
        <!-- Recent Users -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Recent Users</h6>
                    <a asp-controller="UserManagement" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Joined</th>
                                </tr>
                            </thead>
                            <tbody id="recentUsersTable">
                                <!-- Will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Applications -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Recent Applications</h6>
                    <a asp-controller="OpportunityManagement" asp-action="Applications" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Opportunity</th>
                                    <th>Applicant</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody id="recentApplicationsTable">
                                <!-- Will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-4">Quick Actions</h5>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="quick-action-card">
                        <div class="quick-action-icon">
                            <i class="bx bx-user-plus"></i>
                        </div>
                        <div class="quick-action-content">
                            <h6>User Management</h6>
                            <p>Manage user accounts, roles, and permissions</p>
                            <a asp-controller="UserManagement" asp-action="Index" class="btn btn-primary btn-sm">
                                Go to Users
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="quick-action-card disabled">
                        <div class="quick-action-icon">
                            <i class="bx bx-trophy"></i>
                        </div>
                        <div class="quick-action-content">
                            <h6>Contest Management</h6>
                            <p>Create and manage contests and submissions</p>
                            <button class="btn btn-secondary btn-sm" disabled>
                                Coming Soon
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

