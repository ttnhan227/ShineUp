@model Client.Areas.Admin.Models.ContestDetailViewModel

@{
    ViewData["Title"] = "Contest Details";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<div class="container-fluid">
    <div class="row">
        <!-- Main Content -->
        <div class="col-12">
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0">@Model.Title</h2>
                        <div class="button-group">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class='bx bx-arrow-back'></i> Back to List
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Contest Information</h5>
                                    <div class="profile-details">
                                        <div class="profile-detail-item">
                                            <label><i class='bx bx-detail'></i> Description</label>
                                            <div class="form-control-plaintext p-3 bg-light rounded">@Model.Description</div>
                                        </div>
                                        <div class="profile-detail-item">
                                            <label><i class='bx bx-calendar'></i> Start Date</label>
                                            <p class="form-control-plaintext">@Model.StartDate.ToString("g")</p>
                                        </div>
                                        <div class="profile-detail-item">
                                            <label><i class='bx bx-calendar-check'></i> End Date</label>
                                            <p class="form-control-plaintext">@Model.EndDate.ToString("g")</p>
                                        </div>
                                        <div class="profile-detail-item">
                                            <div class="profile-detail-item">
                                                <label><i class='bx bx-time'></i> Status</label>
                                                <div>
                                                    @if (DateTime.Now < Model.StartDate)
                                                    {
                                                        <span class="badge bg-primary p-2">Upcoming</span>
                                                    }
                                                    else if (DateTime.Now > Model.EndDate)
                                                    {
                                                        <span class="badge bg-secondary p-2">Ended</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success p-2">Active</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Quick Actions</h5>
                                    <div class="d-grid gap-2">
                                        <a asp-controller="ContestEntry" asp-action="Create" asp-route-contestId="@Model.ContestID" class="btn btn-primary mb-2">
                                            <i class='bx bx-plus'></i> Add New Entry
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@Model.ContestID" class="btn btn-outline-secondary">
                                            <i class='bx bx-edit'></i> Edit Contest
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center bg-white">
                            <h5 class="mb-0">Entries (@Model.Entries.Count())</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Entries.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Title</th>
                                                <th>User</th>
                                                <th>Submitted</th>
                                                <th>Status</th>
                                                <th style="width: 150px;">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var entry in Model.Entries)
                                            {
                                                <tr>
                                                    <td>@entry.Title</td>
                                                    <td>@entry.UserName</td>
                                                    <td>@entry.SubmittedAt.ToString("g")</td>
                                                    <td>
                                                        @if (entry.IsWinner)
                                                        {
                                                            <span class="badge bg-success p-2">Winner</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary p-2">Submitted</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <a href="@entry.MediaUrl" target="_blank" class="btn btn-info" data-bs-toggle="tooltip" title="View Entry">
                                                                <i class='bx bx-show'></i>
                                                            </a>
                                                            @if (!entry.IsWinner)
                                                            {
                                                                <form asp-action="DeclareWinner" asp-route-id="@entry.EntryID" method="post" class="d-inline">
                                                                    <input type="hidden" name="contestId" value="@Model.ContestID" />
                                                                    <button type="submit" class="btn btn-success" data-bs-toggle="tooltip" title="Declare Winner">
                                                                        <i class='bx bx-trophy'></i>
                                                                    </button>
                                                                </form>
                                                            }
                                                            <form asp-action="DeleteEntry" method="post" class="d-inline">
                                                                <input type="hidden" name="entryId" value="@entry.EntryID" />
                                                                <input type="hidden" name="contestId" value="@Model.ContestID" />
                                                                <button type="submit" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Entry"
                                                                        onclick="return confirm('Are you sure you want to delete this entry?')">
                                                                    <i class='bx bx-trash'></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">No entries submitted yet.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this contest? This will also delete all associated entries. This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.ContestID" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
