@model Client.Models.OpportunityApplicationViewModel

@{
    ViewData["Title"] = "Edit Application";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Edit Application</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ApplicationID" />
                        <input type="hidden" asp-for="UserID" />
                        <input type="hidden" asp-for="Username" />
                        <input type="hidden" asp-for="AppliedAt" />
                        
                        <div class="mb-3">
                            <label asp-for="OpportunityTitle" class="form-label">Opportunity Title</label>
                            <input asp-for="OpportunityTitle" class="form-control" />
                            <span asp-validation-for="OpportunityTitle" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="OpportunityDescription" class="form-label">Description</label>
                            <textarea asp-for="OpportunityDescription" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="OpportunityDescription" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-text">
                                <strong>Applied on:</strong> @Model.AppliedAt
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Add any additional client-side validation or behavior here
        $(document).ready(function() {
            // Auto-resize textarea
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });
    </script>
}
