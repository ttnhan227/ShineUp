@model Client.Models.OpportunityApplicationViewModel

@{
    ViewData["Title"] = "Application Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Application Details</h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.ApplicationID" class="btn btn-sm btn-outline-primary me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.ApplicationID" class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Are you sure you want to delete this application?')">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Opportunity Title</dt>
                        <dd class="col-sm-9">@Model.OpportunityTitle</dd>
                        
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.OpportunityDescription</dd>
                        
                        <dt class="col-sm-3">Applicant</dt>
                        <dd class="col-sm-9">@Model.Username</dd>
                        
                        <dt class="col-sm-3">Applied On</dt>
                        <dd class="col-sm-9">@Model.AppliedAt</dd>
                    </dl>
                    
                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        dt {
            font-weight: 500;
        }
        dd {
            margin-bottom: 1rem;
        }
    </style>
}
