@model IEnumerable<Client.Models.OpportunityViewModel>

@{
    ViewData["Title"] = "Talent Opportunities";
    var talentAreas = new List<string> { "Music", "Dance", "Acting", "Art", "Photography", "Writing", "Other" };
}

<div class="main-content-container">
    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
            <!-- Search and Filter Bar -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Talent Opportunities</h5>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class='bx bx-plus'></i> Post Opportunity
                        </a>
                    </div>
                    
                    <form method="get" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Search opportunities...">
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class='bx bx-search'></i>
                            </button>
                        </div>
                    </form>
                    
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/opportunities" class="btn btn-sm btn-outline-primary">All</a>
                        @foreach (var area in talentAreas)
                        {
                            <a href="/opportunities/talent/@area.ToLower()" class="btn btn-sm btn-outline-secondary">@area</a>
                        }
                    </div>
                </div>
            </div>

            <!-- Opportunities List -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class='bx bx-info-circle display-4 text-muted mb-3'></i>
                    <h5>No opportunities found</h5>
                    <p class="text-muted">Check back later or post a new opportunity.</p>
                </div>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="card mb-3 opportunity-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="card-title mb-1">@item.Title</h5>
                                    <div class="d-flex align-items-center text-muted small mb-2">
                                        <span>@item.Type</span>
                                        <span class="mx-2">â€¢</span>
                                        @if (item.IsRemote)
                                        {
                                            <span>Remote</span>
                                        }
                                        else if (!string.IsNullOrEmpty(item.Location))
                                        {
                                            <span>@item.Location</span>
                                        }
                                    </div>
                                </div>
                                <span class="badge bg-@(item.Status == OpportunityStatus.Open ? "success" : "secondary") text-uppercase">
                                    @item.Status
                                </span>
                            </div>
                            
                            <p class="card-text text-muted mb-3">
                                @(item.Description.Length > 200 ? item.Description.Substring(0, 200) + "..." : item.Description)
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    @if (item.ApplicationDeadline.HasValue)
                                    {
                                        <div>Deadline: @item.ApplicationDeadline.Value.ToString("MMM dd, yyyy")</div>
                                    }
                                    <div>Posted @(DateTime.UtcNow.Subtract(item.CreatedAt).Days > 0 ? $"{DateTime.UtcNow.Subtract(item.CreatedAt).Days}d" : "Today")</div>
                                </div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        
        <!-- Sidebar -->
        <div class="col-xl-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="card-title">My Opportunities</h6>
                    <a href="/opportunities/my" class="btn btn-outline-primary w-100 mb-2">
                        View My Posts
                    </a>
                    <a href="/opportunities/create" class="btn btn-primary w-100">
                        <i class='bx bx-plus'></i> Post New Opportunity
                    </a>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Filter by Talent Area</h6>
                    <div class="d-flex flex-column gap-2">
                        <a href="/opportunities" class="btn btn-sm btn-outline-secondary text-start">
                            All Opportunities
                        </a>
                        @foreach (var area in talentAreas)
                        {
                            <a href="/opportunities/talent/@area.ToLower()" class="btn btn-sm btn-outline-secondary text-start">
                                @area
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .opportunity-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .opportunity-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
        
        .badge {
            font-size: 0.7rem;
            padding: 0.35em 0.65em;
        }
    </style>
}
