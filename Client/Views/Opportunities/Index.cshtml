@model List<Client.Models.OpportunityApplicationViewModel>

@{
    ViewData["Title"] = "My Opportunities";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">My Applications</h5>
                    <a asp-action="Create" class="btn btn-primary btn-sm">New Application</a>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group">
                            @foreach (var application in Model)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@application.OpportunityTitle</h6>
                                        <small>@application.AppliedAt</small>
                                    </div>
                                    <p class="mb-1">@application.OpportunityDescription</p>
                                    <div class="mt-2 d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@application.ApplicationID" class="btn btn-outline-info btn-sm">View Details</a>
                                        <a asp-action="Edit" asp-route-id="@application.ApplicationID" class="btn btn-outline-secondary btn-sm">Edit</a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@application.ApplicationID" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                    onclick="return confirm('Are you sure you want to delete this application? This action cannot be undone.')">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            You haven't applied to any opportunities yet.
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Notification section removed for simplicity. 
             You can add it back later if needed using ViewBag or another method. -->
    </div>
</div>

@section Styles {
    <style>
        .list-group-item {
            transition: background-color 0.2s;
        }
        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
}
