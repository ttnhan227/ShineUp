@model IEnumerable<Client.Models.OpportunityViewModel>
@{
    ViewData["Title"] = "Opportunities";
    var categoryId = ViewContext.RouteData.Values["id"]?.ToString() ?? 
                   Context.Request.Query["categoryId"].ToString();
    var categories = ViewBag.Categories as List<CategoryViewModel> ?? new List<CategoryViewModel>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@(categoryId != null ? $"{categories.FirstOrDefault(c => c.CategoryID.ToString() == categoryId)?.CategoryName ?? "Category"} Opportunities" : "All Opportunities")</h2>
        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" class="btn btn-primary me-2">
                    <i class="bi bi-plus-lg"></i> Post Opportunity
                </a>
                <a asp-action="MyOpportunities" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-briefcase"></i> My Opportunities
                </a>
                <a asp-action="MyApplications" class="btn btn-outline-secondary">
                    <i class="bi bi-card-checklist"></i> My Applications
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Filter</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Categories</h6>
                    <div class="list-group list-group-flush">
                        <a asp-action="Index" asp-route-id="" 
                           class="list-group-item list-group-item-action @(string.IsNullOrEmpty(categoryId) ? "active" : "")">
                            All Opportunities
                        </a>
                        @foreach (var category in categories)
                        {
                            <a asp-action="Index" asp-route-id="@category.CategoryID" 
                               class="list-group-item list-group-item-action @(categoryId == category.CategoryID.ToString() ? "active" : "")">
                                @category.CategoryName
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No opportunities found. @(string.IsNullOrEmpty(categoryId) ? "" : "Try a different category or check back later.")
                </div>
            }
            else
            {
                foreach (var opportunity in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title mb-1">
                                        <a asp-action="Details" asp-route-id="@opportunity.Id" class="text-decoration-none">
                                            @opportunity.Title
                                        </a>
                                    </h5>
                                    <p class="text-muted mb-1">
                                        <i class="bi @(opportunity.IsRemote ? "bi-globe" : "bi-geo-alt") me-1"></i>
                                        @(opportunity.IsRemote ? "Remote" : opportunity.Location)
                                        @if (!string.IsNullOrEmpty(opportunity.TalentArea))
                                        {
                                            <span class="ms-2">
                                                <span class="badge bg-primary">@opportunity.TalentArea</span>
                                            </span>
                                        }
                                        <span class="ms-2">
                                            <span class="badge bg-secondary">@opportunity.Type.ToString()</span>
                                        </span>
                                    </p>
                                    <p class="card-text text-muted small">
                                        <i class="bi bi-person me-1"></i>@opportunity.PostedByUserName
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-clock me-1"></i>@opportunity.CreatedAt.ToString("MMM d, yyyy")
                                        @if (opportunity.ApplicationDeadline.HasValue)
                                        {
                                            <span class="mx-2">•</span>
                                            <i class="bi bi-calendar-check me-1"></i>@("Apply by ") @opportunity.ApplicationDeadline.Value.ToString("MMM d, yyyy")
                                        }
                                    </p>
                                </div>
                                <div class="text-end">
                                    @if (opportunity.ApplicationCount > 0)
                                    {
                                        <div class="mb-2">
                                            <span class="badge bg-info">
                                                @opportunity.ApplicationCount @(opportunity.ApplicationCount == 1 ? "application" : "applications")
                                            </span>
                                        </div>
                                    }
                                    <a asp-action="Details" asp-route-id="@opportunity.Id" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .list-group-item.active {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}
