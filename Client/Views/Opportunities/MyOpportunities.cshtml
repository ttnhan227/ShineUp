@model IEnumerable<Client.Models.OpportunityViewModel>
@{
    ViewData["Title"] = "My Posted Opportunities";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Posted Opportunities</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Post New Opportunity
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-briefcase text-muted" style="font-size: 3rem;"></i>
                </div>
                <h3 class="h5 mb-3">You haven't posted any opportunities yet</h3>
                <p class="text-muted mb-4">Create your first opportunity to find the perfect talent for your project or event.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i> Post Your First Opportunity
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Applications</th>
                        <th>Posted</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var opportunity in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@opportunity.Id" class="text-decoration-none">
                                    @opportunity.Title
                                </a>
                                @if (!string.IsNullOrEmpty(opportunity.TalentArea))
                                {
                                    <div class="text-muted small">@opportunity.TalentArea</div>
                                }
                            </td>
                            <td>@opportunity.Type.ToString()</td>
                            <td>
                                @if (opportunity.Status == OpportunityStatus.Open)
                                {
                                    <span class="badge bg-success text-capitalize">@opportunity.Status.ToString()</span>
                                }
                                else if (opportunity.Status == OpportunityStatus.Draft)
                                {
                                    <span class="badge bg-secondary text-capitalize">@opportunity.Status.ToString()</span>
                                }
                                else if (opportunity.Status == OpportunityStatus.Closed || opportunity.Status == OpportunityStatus.Cancelled)
                                {
                                    <span class="badge bg-danger text-capitalize">@opportunity.Status.ToString()</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-capitalize">@opportunity.Status.ToString()</span>
                                }
                            </td>
                            <td>
                                @if (opportunity.ApplicationCount > 0)
                                {
                                    <a asp-action="Details" asp-route-id="@opportunity.Id" class="text-decoration-none">
                                        @opportunity.ApplicationCount @(opportunity.ApplicationCount == 1 ? "application" : "applications")
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No applications</span>
                                }
                            </td>
                            <td>@opportunity.CreatedAt.ToString("MMM d, yyyy")</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@opportunity.Id">
                                                <i class="bi bi-eye me-2"></i>View
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@opportunity.Id">
                                                <i class="bi bi-pencil me-2"></i>Edit
                                            </a>
                                        </li>
                                        @if (opportunity.Status == OpportunityStatus.Open)
                                        {
                                            <li>
                                                <form asp-action="UpdateStatus" asp-route-id="@opportunity.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="status" value="pause" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-pause-circle me-2"></i>Pause
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        else if (opportunity.Status == OpportunityStatus.Draft)
                                        {
                                            <li>
                                                <form asp-action="UpdateStatus" asp-route-id="@opportunity.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="status" value="publish" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-check-circle me-2"></i>Publish
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@opportunity.Id" />
                                                <button type="submit" class="dropdown-item text-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this opportunity? This action cannot be undone.')">
                                                    <i class="bi bi-trash me-2"></i>Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Styles {
    <style>
        .table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
            border-top: none;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }
        .table td {
            vertical-align: middle;
            padding-top: 1.25rem;
            padding-bottom: 1.25rem;
        }
        .table-hover > tbody > tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }
        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
        .dropdown-toggle::after {
            display: none;
        }
        .dropdown-menu {
            min-width: 10rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 0.5rem;
            padding: 0.5rem 0;
        }
        .dropdown-item {
            padding: 0.5rem 1.25rem;
            font-size: 0.9rem;
            color: #212529;
        }
        .dropdown-item i {
            width: 1.25rem;
            text-align: center;
            margin-right: 0.5rem;
        }
        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #0d6efd;
        }
    </style>
}
