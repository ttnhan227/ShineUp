@model Client.Models.CreateOpportunityViewModel

@{
    ViewData["Title"] = "Post New Opportunity";
}

<div class="main-content-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h2 class="h4 mb-0">Post a New Opportunity</h2>
                    <p class="text-muted mb-0">Share your talent opportunity with the community</p>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="opportunityForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>
                            
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-semibold">Opportunity Title *</label>
                                <input asp-for="Title" class="form-control form-control-lg" placeholder="E.g., Lead Guitarist for Indie Band" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                                <div class="form-text">Be specific and descriptive to attract the right talent.</div>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">Opportunity Details *</label>
                                <textarea asp-for="Description" class="form-control" rows="8" 
                                          placeholder="Provide a detailed description of the opportunity, including responsibilities, requirements, and any other relevant information."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="form-text">Use formatting tools to make your post easy to read.</div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Type" class="form-label fw-semibold">Opportunity Type *</label>
                                    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<Client.Models.OpportunityType>()">
                                        <option value="">Select a type</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TalentArea" class="form-label fw-semibold">Talent Area</label>
                                    <input asp-for="TalentArea" class="form-control" placeholder="E.g., Music, Dance, Acting" />
                                    <span asp-validation-for="TalentArea" class="text-danger"></span>
                                    <div class="form-text">What type of talent are you looking for?</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">Location & Timing</h5>
                            
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" role="switch" id="isRemote" asp-for="IsRemote">
                                <label class="form-check-label fw-semibold" for="isRemote">This is a remote opportunity</label>
                            </div>
                            
                            <div id="locationField" class="mb-3" style="display: none;">
                                <label asp-for="Location" class="form-label fw-semibold">Location</label>
                                <input asp-for="Location" class="form-control" placeholder="E.g., New York, NY or Online" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                                <div class="form-text">City, State or specify if it's online.</div>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="ApplicationDeadline" class="form-label fw-semibold">Application Deadline</label>
                                <input type="date" asp-for="ApplicationDeadline" class="form-control" />
                                <span asp-validation-for="ApplicationDeadline" class="text-danger"></span>
                                <div class="form-text">Leave blank if there's no specific deadline.</div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class='bx bx-plus-circle me-1'></i> Post Opportunity
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control, .form-select {
            padding: 0.5rem 0.75rem;
        }
        
        .form-control-lg {
            font-size: 1.1rem;
        }
        
        .form-label {
            margin-bottom: 0.5rem;
        }
        
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        .card-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .card-body {
            padding: 2rem;
        }
        
        textarea.form-control {
            min-height: 200px;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const isRemoteCheckbox = document.getElementById('isRemote');
            const locationField = document.getElementById('locationField');
            
            // Toggle location field based on remote checkbox
            function toggleLocationField() {
                if (isRemoteCheckbox.checked) {
                    locationField.style.display = 'none';
                    document.getElementById('Location').value = 'Remote';
                } else {
                    locationField.style.display = 'block';
                    document.getElementById('Location').value = '';
                }
            }
            
            // Initialize on page load
            toggleLocationField();
            
            // Add event listener
            isRemoteCheckbox.addEventListener('change', toggleLocationField);
            
            // Set minimum date for deadline to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('ApplicationDeadline').min = today;
        });
    </script>
}
