@model Client.Models.CreateOpportunityViewModel
@{
    ViewData["Title"] = "Post New Opportunity";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Post a New Opportunity</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">Opportunity Details</h5>
                            
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <label asp-for="Title" class="form-label">Title *</label>
                                    <input asp-for="Title" class="form-control" placeholder="E.g., Guitarist needed for jazz band" required>
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Type" class="form-label">Type *</label>
                                    <select asp-for="Type" class="form-select" required>
                                        <option value="">-- Select Type --</option>
                                        <option value="0">Job</option>
                                        <option value="1">Gig</option>
                                        <option value="2">Freelance</option>
                                        <option value="3">Audition</option>
                                        <option value="4">Casting Call</option>
                                        <option value="5">Collaboration</option>
                                        <option value="6">Internship</option>
                                        <option value="7">Volunteer</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Description *</label>
                                <textarea asp-for="Description" class="form-control" rows="8" 
                                          placeholder="Provide detailed information about the opportunity, including responsibilities, requirements, and any other relevant details." required></textarea>
                                <div class="form-text">
                                    Be clear and specific about what you're looking for. Include any requirements, expectations, and benefits.
                                </div>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="TalentArea" class="form-label">Talent Area *</label>
                                    <select asp-for="TalentArea" class="form-select" required>
                                        <option value="">Select talent area</option>
                                        <option value="Music">Music</option>
                                        <option value="Dance">Dance</option>
                                        <option value="Acting">Acting</option>
                                        <option value="Modeling">Modeling</option>
                                        <option value="Photography">Photography</option>
                                        <option value="Videography">Videography</option>
                                        <option value="Writing">Writing</option>
                                        <option value="Design">Design</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="TalentArea" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CategoryId" class="form-label">Category (Optional)</label>
                                    <select asp-for="CategoryId" class="form-select">
                                        <option value="">Select category</option>
                                        <!-- Categories would be populated from the database -->
                                        <option value="1">Performing Arts</option>
                                        <option value="2">Visual Arts</option>
                                        <option value="3">Media Production</option>
                                        <option value="4">Design & Creative</option>
                                        <option value="5">Writing & Translation</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">Location & Timing</h5>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-check form-switch mb-3">
                                        <input class="form-check-input" type="checkbox" id="isRemote" asp-for="IsRemote">
                                        <label class="form-check-label" for="isRemote">This is a remote opportunity</label>
                                    </div>
                                    <div id="locationField" class="mb-3">
                                        <label asp-for="Location" class="form-label">Location *</label>
                                        <input asp-for="Location" class="form-control" placeholder="E.g., New York, NY">
                                        <span asp-validation-for="Location" class="text-danger small"></span>
                                        <div class="form-text">City and state/country where the opportunity is based</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ApplicationDeadline" class="form-label">Application Deadline (Optional)</label>
                                    <input asp-for="ApplicationDeadline" type="date" class="form-control" 
                                           min="@DateTime.Today.ToString("yyyy-MM-dd")">
                                    <span asp-validation-for="ApplicationDeadline" class="text-danger small"></span>
                                    <div class="form-text">Leave blank if there's no specific deadline</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i> Post Opportunity
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Show/hide location field based on remote checkbox
        document.addEventListener('DOMContentLoaded', function() {
            const isRemoteCheckbox = document.getElementById('isRemote');
            const locationField = document.getElementById('locationField');
            const locationInput = document.querySelector('[name="Location"]');
            
            function toggleLocationField() {
                if (isRemoteCheckbox.checked) {
                    locationField.style.display = 'none';
                    locationInput.removeAttribute('required');
                } else {
                    locationField.style.display = 'block';
                    locationInput.setAttribute('required', 'required');
                }
            }
            
            // Initial check
            toggleLocationField();
            
            // Add event listener
            isRemoteCheckbox.addEventListener('change', toggleLocationField);
        });
    </script>
}

@section Styles {
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }
        .form-control, .form-select {
            padding: 0.5rem 0.75rem;
        }
        textarea.form-control {
            min-height: 200px;
        }
        .form-label {
            font-weight: 500;
            margin-bottom: 0.3rem;
        }
        .btn {
            padding: 0.5rem 1.25rem;
        }
    </style>
}
