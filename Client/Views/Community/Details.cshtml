                    $imageCount.text(imageFiles.length).removeClass('d-none');
                } else {
                    $imageCount.addClass('d-none');
                }

                if (videoFiles.length > 0) {
                    $videoCount.text(videoFiles.length).removeClass('d-none');
                } else {
                    $videoCount.addClass('d-none');
                }
