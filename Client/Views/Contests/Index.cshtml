@model IEnumerable<Client.DTOs.ContestDTO>
@{
    ViewData["Title"] = "Contests";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Contest List</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contest in Model.Select((item, index) => new { item, index }))
                {
                    <tr>
                        <td>@(contest.index + 1)</td>
                        <td>@contest.item.Title</td>
                        <td>@contest.item.Description</td>
                        <td>@contest.item.StartDate.ToShortDateString()</td>
                        <td>@contest.item.EndDate.ToShortDateString()</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary me-1" href="/Votes/Entries?contestId=@contest.item.ContestID">Vote</a>
                            <a class="btn btn-sm btn-outline-success" href="/ContestEntries/Create">Submit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">No contests available.</div>
    }
</div>
