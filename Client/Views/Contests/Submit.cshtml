@model SubmitContestEntryViewModel
@{
    ViewData["Title"] = "Submit Contest Entry";
}

<h1>Submit Contest Entry</h1>
<form asp-action="Submit" method="post">
    <input type="hidden" asp-for="ContestID" />
    <input type="hidden" asp-for="UserID" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <p>Note: Submission logic is simplified. In a full implementation, select a video to submit.</p>
    </div>
    <button type="submit" class="btn btn-primary">Submit Entry</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}