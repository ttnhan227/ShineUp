@model List<Client.Models.CommunityViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Không tìm thấy cộng đồng nào.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Tên cộng đồng</th>
                    <th>Mô tả</th>
                    <th>Ngày tạo</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var community in Model)
                {
                    <tr>
                        <td>@community.Name</td>
                        <td>@(string.IsNullOrEmpty(community.Description) ? "Không có mô tả" : community.Description)</td>
                        <td>@community.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("Details", "Community", new { communityId = community.CommunityID })" 
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}