@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="text-danger mb-4">
                        <i class="fas fa-exclamation-triangle"></i> Error
                    </h1>
                    <h2 class="text-danger mb-4">An error occurred while processing your request.</h2>

                    @if (Model?.ShowRequestId == true)
                    {
                        <p class="mb-4">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="alert alert-info">
                        <h3 class="h5 mb-3">Development Mode</h3>
                        <p class="mb-2">
                            Swapping to <strong>Development</strong> environment will display more detailed information
                            about the error that occurred.
                        </p>
                        <p class="mb-0">
                            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                            It can result in displaying sensitive information from exceptions to end users.
                            For local debugging, enable the <strong>Development</strong> environment by setting the
                            <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
                            and restarting the app.
                        </p>
                    </div>

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Return Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>