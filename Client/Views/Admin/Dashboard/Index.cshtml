@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container mt-5">
    <h2 class="mb-4">Admin Dashboard</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title mb-3"><i class="bx bx-user"></i> User Management</h5>
                        <p class="card-text">View, edit, and manage all users on the platform.</p>
                    </div>
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-primary mt-3">Go to User Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm bg-light">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title mb-3 text-muted"><i class="bx bx-trophy"></i> Contest Management</h5>
                        <p class="card-text text-muted">Coming soon: Manage contests, entries, and results.</p>
                    </div>
                    <button class="btn btn-secondary mt-3" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm bg-light">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title mb-3 text-muted"><i class="bx bx-cog"></i> Site Settings</h5>
                        <p class="card-text text-muted">Coming soon: Configure website settings and preferences.</p>
                    </div>
                    <button class="btn btn-secondary mt-3" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
}
