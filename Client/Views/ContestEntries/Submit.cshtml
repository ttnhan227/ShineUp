@model Client.Models.ContestEntry

@{
    ViewBag.Title = "Submit Contest Entry";
}

<h2>Submit Your Entry</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="Submit" method="post">
    <input type="hidden" asp-for="ContestID" />

    <div class="form-group mb-3">
        <label asp-for="VideoID">Select Video</label>
        <select asp-for="VideoID" class="form-control" asp-items="ViewBag.Videos">
            <option value="">-- Choose a video --</option>
        </select>
        <span asp-validation-for="VideoID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Caption">Caption</label>
        <textarea asp-for="Caption" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Caption" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Entry</button>
</form>

@section Scripts {
    <script>
        document.querySelector('form')?.addEventListener('submit', function (e) {
            if (!confirm("Are you sure you want to submit this entry?")) {
                e.preventDefault();
            }
        });
    </script>
}
