@model Client.Models.UserViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="profile-container">
    <div class="profile-header">
        <h2>User Profile</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <div class="profile-content">
        <div class="profile-image-section">
            @if (!string.IsNullOrEmpty(Model.ProfileImageURL))
            {
                <img src="@Model.ProfileImageURL" alt="Profile Image" class="profile-image" />
            }
            else
            {
                <div class="profile-image-placeholder">
                    <i class="fas fa-user"></i>
                </div>
            }
        </div>

        <div class="profile-details">
            <div class="profile-detail-item">
                <label>@Html.DisplayNameFor(model => model.Username)</label>
                <span>@Html.DisplayFor(model => model.Username)</span>
            </div>
            <div class="profile-detail-item">
                <label>@Html.DisplayNameFor(model => model.Email)</label>
                <span>@Html.DisplayFor(model => model.Email)</span>
            </div>
            <div class="profile-detail-item">
                <label>@Html.DisplayNameFor(model => model.Bio)</label>
                <span>@Html.DisplayFor(model => model.Bio)</span>
            </div>
            <div class="profile-detail-item">
                <label>@Html.DisplayNameFor(model => model.TalentArea)</label>
                <span>@Html.DisplayFor(model => model.TalentArea)</span>
            </div>
        </div>
    </div>

    <div class="button-group">
        <a asp-action="Edit" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit Profile
        </a>
        <a asp-action="ChangePassword" class="btn btn-secondary">
            <i class="fas fa-key"></i> Change Password
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .profile-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .profile-header h2 {
            color: #2c3e50;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .profile-content {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .profile-image-section {
            flex: 0 0 200px;
        }

        .profile-image {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #007bff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile-image-placeholder {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid #dee2e6;
        }

        .profile-image-placeholder i {
            font-size: 5rem;
            color: #6c757d;
        }

        .profile-details {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .profile-detail-item {
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .profile-detail-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .profile-detail-item label {
            display: block;
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .profile-detail-item span {
            color: #2c3e50;
            font-size: 1.1rem;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .button-group .btn {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .button-group .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background: #007bff;
            border: none;
        }

        .btn-secondary {
            background: #6c757d;
            border: none;
        }

        .alert {
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            border: none;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        @@media (max-width: 768px) {
            .profile-content {
                flex-direction: column;
                align-items: center;
            }

            .profile-image-section {
                margin-bottom: 2rem;
            }

            .button-group {
                flex-direction: column;
            }

            .button-group .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}
