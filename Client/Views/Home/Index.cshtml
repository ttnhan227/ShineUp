@{
    ViewData["Title"] = "Home";
}

<!-- CSS nội tuyến hoặc chuyển qua site.css nếu muốn -->
<style>
    .hero {
        background: linear-gradient(to right, #7f00ff, #e100ff);
        color: white;
        padding: 120px 0;
        text-align: center;
    }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
        }

    .btn-primary {
        background-color: #ffc107;
        border: none;
        font-weight: bold;
    }

    .section {
        padding: 80px 0;
    }

    .icon-circle {
        background-color: #f3e8ff;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 2rem;
        margin: auto;
        color: #6f42c1;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .stats-box {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
        text-align: center;
    }
</style>

<!-- Hero Banner -->
<div class="hero">
    <div class="container">
        <h1>Discover Talents. Vote. Shine.</h1>
        <p>Join Vietnam’s leading platform for online talent competitions</p>
        <a href="/Contests" class="btn btn-lg btn-primary shadow">Explore Contests</a>
    </div>
</div>

<!-- How It Works -->
<div class="section bg-light text-center">
    <div class="container">
        <h2 class="section-title text-primary">How It Works</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="icon-circle mb-3">📤</div>
                <h5>Submit Your Video</h5>
                <p>Join exciting contests by uploading your talent video.</p>
            </div>
            <div class="col-md-4">
                <div class="icon-circle mb-3">👍</div>
                <h5>Get Votes</h5>
                <p>Share your entry and receive votes from the community.</p>
            </div>
            <div class="col-md-4">
                <div class="icon-circle mb-3">🏆</div>
                <h5>Win & Shine</h5>
                <p>Top talents will be highlighted and rewarded.</p>
            </div>
        </div>
    </div>
</div>

<!-- Platform Stats -->
<div class="section text-center">
    <div class="container">
        <h2 class="section-title text-success">ShineUp in Numbers</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stats-box">
                    <h3>+200K</h3>
                    <p>Videos Submitted</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-box">
                    <h3>+1M</h3>
                    <p>Votes Recorded</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-box">
                    <h3>99%</h3>
                    <p>User Satisfaction</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-box">
                    <h3>0.5s</h3>
                    <p>Avg Load Time</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="hero" style="padding: 60px 0;">
    <h2>Ready to Shine?</h2>
    <a href="/Auth/login" class="btn btn-warning btn-lg mt-3">Join Now</a>
</div>
