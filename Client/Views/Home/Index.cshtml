@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
    <style>
        .hero {
            position: relative;
            overflow: hidden;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/microphone_light.jpg') no-repeat center center/cover;
            color: white;
            padding: 180px 0 120px;
            text-align: center;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .hero p {
            font-size: 1.4rem;
            margin-bottom: 2rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            opacity: 0.9;
        }

        .talent-showcase {
            position: relative;
            padding: 80px 0;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

        .talent-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

        .talent-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .talent-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .talent-card .card-body {
            padding: 1.5rem;
        }

        .music-note {
            position: absolute;
            opacity: 0.1;
            z-index: 0;
        }

        .music-note.left {
            left: 5%;
            top: 10%;
            width: 150px;
            animation: float 6s ease-in-out infinite;
        }

        .music-note.right {
            right: 5%;
            bottom: 10%;
            width: 200px;
            animation: float 8s ease-in-out infinite;
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
            transition: all 0.3s ease;
        }

        .stats-box {
            padding: 2.5rem 1.5rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            text-align: center;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .stats-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        }

        .stats-box h3 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
        }

        .stats-box p {
            color: var(--text-light);
            margin-bottom: 0;
        }

        .cta-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .cta-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .btn-cta {
            background: white;
            color: var(--primary-color);
            font-weight: 600;
            padding: 12px 35px;
            border-radius: 50px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .btn-cta:hover {
            background: transparent;
            color: white;
            border-color: white;
            transform: translateY(-3px);
        }

        .color-splash {
            position: absolute;
            opacity: 0.1;
            z-index: 0;
        }

        .splash-1 {
            top: -50px;
            right: -50px;
            width: 300px;
            animation: float 8s ease-in-out infinite;
        }

        .splash-2 {
            bottom: -30px;
            left: -30px;
            width: 250px;
            animation: float 10s ease-in-out infinite;
        }

        @@keyframes float {
            0% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
            100% { transform: translateY(0px) rotate(0deg); }
        }
    </style>
}

