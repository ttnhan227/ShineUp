@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <!-- AOS Animation & Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #6f42c1;
            --secondary-color: #20c997;
            --accent-color: #ffb347;
            --text-dark: #22223b;
            --text-light: #6c757d;
            --bg-light: #f8f9fa;
            --bg-gradient: linear-gradient(135deg, #6f42c1 0%, #20c997 100%);
        }

        body {
            font-family: 'Segoe UI', 'Roboto', sans-serif;
            background: var(--bg-light);
            color: var(--text-dark);
        }

        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(32, 201, 151, 0.5)), url('/images/microphone_light.jpg') center/cover no-repeat;
            color: white;
            text-align: center;
            padding: 180px 0 120px;
            position: relative;
        }

            .hero h1 {
                font-size: 3.5rem;
                font-weight: 800;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.25);
                animation: fadeInDown 1s ease-out;
            }

            .hero p {
                font-size: 1.3rem;
                max-width: 700px;
                margin: 0 auto 2rem;
                opacity: 0.95;
                animation: fadeInUp 1.3s ease-out;
            }

        .btn-primary, .btn-outline-primary, .btn-cta {
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover, .btn-cta:hover {
                background: var(--secondary-color);
                color: #fff;
                transform: translateY(-3px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .btn-outline-primary {
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
        }

            .btn-outline-primary:hover {
                background: var(--primary-color);
                color: #fff;
            }

        .talent-card {
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            background: white;
        }

            .talent-card:hover {
                transform: scale(1.03);
                box-shadow: 0 20px 40px rgba(111, 66, 193, 0.2);
            }

                /* Ảnh nổi nhẹ và dịch lên trên khi hover */
                .talent-card:hover img {
                    transform: scale(1.05) translateY(-2px);
                }

            /* Transition để hình ảnh mượt khi di chuyển */
            .talent-card img {
                height: 220px;
                object-fit: cover;
                transition: transform 0.3s;
            }

        .section-title {
            font-size: 2.4rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .feature-icon {
            font-size: 3rem;
            color: var(--secondary-color);
            margin-bottom: 1rem;
            transition: transform 0.3s;
        }

            .feature-icon:hover {
                transform: scale(1.2);
                color: var(--primary-color);
            }

        .stats-box {
            padding: 2rem 1.5rem;
            background: white;
            text-align: center;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s;
        }

            .stats-box:hover {
                transform: translateY(-5px);
            }

        .cta-section {
            background: var(--bg-gradient);
            color: white;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

            .cta-section h2 {
                font-size: 2.5rem;
                font-weight: 700;
            }

        .btn-cta {
            background: white;
            color: var(--primary-color);
            padding: 12px 30px;
            border: 2px solid white;
        }

            .btn-cta:hover {
                background: transparent;
                color: white;
            }

        .floating {
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }

        100% {
            transform: translateY(0);
        }

        }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 768px) {
            .hero h1

        {
            font-size: 2.2rem;
        }

        .hero p {
            font-size: 1rem;
        }

        }
    </style>
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Discover, Showcase & Shine</h1>
        <p>Join Vietnam's premier platform for talent competitions. Showcase your skills, compete with the best, and get recognized!</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/Contests" class="btn btn-primary btn-lg">Explore Contests</a>
            <a href="#how-it-works" class="btn btn-outline-primary btn-lg">How It Works</a>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="section-title mb-4" data-aos="fade-up">Popular Talent Categories</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-right">
                <div class="talent-card">
                    <img src="/images/Singing_Stars.jpg" alt="Singing" />
                    <div class="p-3">
                        <h4>Singing Stars</h4>
                        <p class="text-muted">Showcase your vocal talent and compete with the best singers</p>
                        <a href="/Contests?category=singing" class="btn btn-outline-primary">View Contests</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up">
                <div class="talent-card">
                    <img src="/images/Dance_Contest.jpg" alt="Dance" />
                    <div class="p-3">
                        <h4>Dance Battles</h4>
                        <p class="text-muted">Move to the rhythm and impress the judges with your dance moves</p>
                        <a href="/Contests?category=dance" class="btn btn-outline-primary">View Contests</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-left">
                <div class="talent-card">
                    <img src="/images/Creative_Arts.jpg" alt="Arts" />
                    <div class="p-3">
                        <h4>Creative Arts</h4>
                        <p class="text-muted">Show your creativity through various forms of visual arts</p>
                        <a href="/Contests?category=arts" class="btn btn-outline-primary">View Contests</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section id="how-it-works" class="py-5">
    <div class="container text-center">
        <h2 class="section-title mb-4" data-aos="fade-up">How It Works</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
                <div class="feature-icon"><i class="bi bi-person-plus"></i></div>
                <h4>1. Create Account</h4>
                <p class="text-muted">Sign up for free and create your profile to get started</p>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="feature-icon"><i class="bi bi-upload"></i></div>
                <h4>2. Upload Talent</h4>
                <p class="text-muted">Record and upload your performance video</p>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="300">
                <div class="feature-icon"><i class="bi bi-trophy"></i></div>
                <h4>3. Compete & Win</h4>
                <p class="text-muted">Get votes, climb the leaderboard, and win prizes</p>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3 col-6" data-aos="flip-left">
                <div class="stats-box">
                    <h3 class="counter">200K+</h3>
                    <p>Members</p>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="flip-left" data-aos-delay="100">
                <div class="stats-box">
                    <h3 class="counter">50+</h3>
                    <p>Contests</p>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="flip-left" data-aos-delay="200">
                <div class="stats-box">
                    <h3 class="counter">1M+</h3>
                    <p>Votes</p>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="flip-left" data-aos-delay="300">
                <div class="stats-box">
                    <h3 class="counter">99%</h3>
                    <p>Happy Users</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section text-center">
    <div class="container">
        <h2 data-aos="fade-up">Ready to Showcase Your Talent?</h2>
        <p class="lead" data-aos="fade-up" data-aos-delay="150">Join thousands of talented individuals and get the recognition you deserve</p>
        <a href="/Auth/login/" class="btn btn-cta btn-lg mt-3" data-aos="zoom-in" data-aos-delay="300">Get Started for Free</a>
        <img src="/images/color_splash1.png" class="floating mt-4" width="100" />
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

    <!-- Smooth scroll to section -->
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
}
