@{
    ViewData["Title"] = "About ShineUp";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-5 fw-bold text-primary">About ShineUp</h1>
            <p class="lead">A platform for showcasing talent through video and online voting</p>
            <hr class="w-25 mx-auto" />
        </div>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title text-dark fw-semibold mb-3">Goal</h4>
                    <p class="card-text text-muted">
                        ShineUp helps users share their talents through videos, participate in online contests, and receive votes from the community.
                    </p>

                    <h4 class="card-title text-dark fw-semibold mt-4 mb-3">Key Features</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">📤 Submit videos to participate in contests</li>
                        <li class="list-group-item">👍 Vote for your favorite entries</li>
                        <li class="list-group-item">📊 Track live voting results</li>
                        <li class="list-group-item">🛡️ Manage users and contests (admin)</li>
                    </ul>

                    <h4 class="card-title text-dark fw-semibold mt-4 mb-3">Development Team</h4>
                    <p class="card-text text-muted">
                        The project is developed by a student team using the ASP.NET Core MVC and API model, combined with Entity Framework, PostgreSQL, and a modern Bootstrap interface.
                    </p>

                    <h4 class="card-title text-dark fw-semibold mt-4 mb-3">Contact</h4>
                    <p class="card-text text-muted">
                        For any feedback or contributions, please contact the development team at <strong>ShineUpTeam5@gmail.com</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>